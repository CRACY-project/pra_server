{
    "compilerOptions": {
        "module": "esnext",
        "declaration": true,
        "declarationDir": "dist/types",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "esnext",
        "sourceMap": false,
        "outDir": "./dist",
        "baseUrl": "./src",
        "rootDir": "./",
        "moduleResolution": "node",
        "paths": {
            "@/*": ["./*"]
        },
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
